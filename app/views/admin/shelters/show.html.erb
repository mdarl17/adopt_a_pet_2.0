<h1> <%= @shelter.get_name %> </h1>
<p><%= @shelter.get_address %> </p>
<section class="statistics">
  <h2>Statistics</h2>
  <p><%= "Average Age of Adoptable Pets: #{@shelter.average_age}" %></p>
  <p><%= "No. Adoptable Pets: #{@shelter.adoptable_pets.count}" %></p>
  <p><%= "No. Pets Adopted: #{@shelter.num_pets_adopted}" %></p>
</section>
<section class="action-required">
  <h2>Action Required</h2>
  <% @shelter.action_required.each do |pet| %>
    <%= pet.name %>
  <% end %>
</section>