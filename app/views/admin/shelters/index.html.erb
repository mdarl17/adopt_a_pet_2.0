<h1>Admin Shelters</h1>
<% @shelters.reverse_alpha.each do |shelter| %>
  <h3><%= link_to shelter.name, "/shelters/#{shelter.id}" %></h3>
   <p>City: <%= shelter.city %></p>
   <p>Foster Program: <%= shelter.foster_program %></p>
   <p>Rank: <%= shelter.rank %></p>
<% end %>
<br>
<section>
  <h2>Shelters with Pending Applications</h2>
  <ol id="shelters-pending">
    <% @shelters.pending_apps.asc_alpha.each do |shelter| %>
      <li><%= shelter.name %></li>
    <% end %>
  </ol>
</section>

